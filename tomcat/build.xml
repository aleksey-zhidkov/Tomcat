<?xml version="1.0" encoding="UTF-8"?>

<project name="Tomcat" basedir="."
         default="archive">
    <property file="build.properties"/>

    <path id="src.files">
        <pathelement location="src"/>
    </path>

    <target name="init">
        <mkdir dir="${bin.dir}"/>
    </target>

    <target name="compile" depends="init" description="Compiles source files">

        <javac destdir="${bin.dir}" debug="on" debuglevel="lines,vars,source" optimize="yes">
            <src refid="src.files"/>

            <classpath>
                <pathelement location="${robocode.dir}\libs\robocode.jar"/>
            </classpath>
        </javac>

        <copyfile src="src/lxx/${robot.name}.properties" dest="bin/lxx/${robot.name}.properties"/>
    </target>

    <target name="clean" description="Deletes all previous build artifacts">
        <delete dir="${bin.dir}"/>
    </target>

    <target name="archive" depends="clean, compile">
        <echo file="${bin.dir}/lxx/${robot.name}.properties">robocode.version=1.7
robot.java.source.included=false
robot.version=${robot.version}
robot.author.name=Alexey Zhidkov
robot.classname=lxx.${robot.name}
robot.name=${robot.name}</echo>

        <jar destfile="lxx.${robot.name}_${robot.version}.jar" compress="true">
            <fileset dir="${bin.dir}"/>
        </jar>

        <copy todir="${robocode.dir}\robots\">
            <fileset file="lxx.${robot.name}_${robot.version}.jar"/>
        </copy>

        <delete file="lxx.${robot.name}_${robot.version}.jar"/>
    </target>

    <target name="init_benchmark" depends="archive">
        <tstamp>
            <format property="TODAY" pattern="yyMMdd"/>
        </tstamp>

        <tstamp>
            <format property="NOW" pattern="HHmm"/>
        </tstamp>

        <property name="bench.results.dir" value="${benchmark.dir}\${TODAY}\${NOW}"/>

        <mkdir dir="${bench.results.dir}"/>
    </target>

    <target name="simple_targeters_bench" depends="init_benchmark">

        <java classpath="${bot.benchmark.classes};${robocode.jar}" classname="ru.jdev.robocode.benchmark2.BotBenchmark2"
              args="lxx.${robot.name} simple_targeters 2 35 ${bench.results.dir}\simple_targeters.br"
              dir="${bot.benchmark.dir}" fork="yes">
        </java>

        <copydir src="${bench.results.dir}" dest="${benchmark.dir}"/>

    </target>

    <target name="bench" depends="archive, simple_targeters_bench">

        <java classpath="${bot.benchmark.classes};${robocode.jar}" classname="ru.jdev.robocode.benchmark2.BotBenchmark2"
              args="lxx.${robot.name} barracuda 1000 35 ${bench.results.dir}\barracuda.br"
              dir="${bot.benchmark.dir}" fork="yes">
        </java>

        <java classpath="${bot.benchmark.classes};${robocode.jar}" classname="ru.jdev.robocode.benchmark2.BotBenchmark2"
              args="lxx.${robot.name} devil_fish 1000 35 ${bench.results.dir}\devil_fish.br"
              dir="${bot.benchmark.dir}" fork="yes">
        </java>

        <java classpath="${bot.benchmark.classes};${robocode.jar}" classname="ru.jdev.robocode.benchmark2.BotBenchmark2"
              args="lxx.${robot.name} quick_roborumble 3 35 ${bench.results.dir}\quick_roborumble.br"
              dir="${bot.benchmark.dir}" fork="yes">
        </java>

        <java classpath="${bot.benchmark.classes};${robocode.jar}" classname="ru.jdev.robocode.benchmark2.BotBenchmark2"
              args="lxx.${robot.name} top10 3 35 ${bench.results.dir}\top10.br"
              dir="${bot.benchmark.dir}" fork="yes">
        </java>

        <java classpath="${bot.benchmark.classes};${robocode.jar}" classname="ru.jdev.robocode.benchmark2.BotBenchmark2"
              args="lxx.${robot.name} roborumble 1 35 ${bench.results.dir}\roborumble.br"
              dir="${bot.benchmark.dir}" fork="yes">
        </java>

        <copydir src="${bench.results.dir}" dest="${benchmark.dir}"/>

    </target>

</project>
